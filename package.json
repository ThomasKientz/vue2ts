{
  "name": "boomerang",
  "description": "email yourself in one tap",
  "homepage": "https://getboomerang.app",
  "author": "Thomas Kientz <contact@boomerang-app.io>",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve --open --port 8050",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "build-local": "vue-cli-service build --mode localhost && npx cap copy",
    "build-android-production": "BROWSERSLIST_ENV=android vue-cli-service build --mode production && npx cap copy",
    "build-ios-production": "BROWSERSLIST_ENV=ios vue-cli-service build --mode production && npx cap copy",
    "build-electron-production": "BROWSERSLIST_ENV=electron vue-cli-service electron:build --skipBundle --mode production",
    "dev": "npm run serve",
    "electron:build": "vue-cli-service electron:build",
    "electron:generate-icons": "electron-icon-builder --input=./public/icon.png --output=build --flatten",
    "electron:serve": "vue-cli-service electron:serve",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "upgrade-interactive": "npm-check --update"
  },
  "main": "background.js",
  "dependencies": {
    "@capacitor/android": "^1.4.0",
    "@capacitor/cli": "^1.4.0",
    "@capacitor/core": "^1.4.0",
    "@capacitor/ios": "^1.4.0",
    "@ionic-native/app-preferences": "^5.19.0",
    "@ionic-native/core": "^5.19.0",
    "@sentry/browser": "^5.10.2",
    "@sentry/integrations": "^5.10.2",
    "axios": "^0.19.0",
    "cordova-plugin-app-preferences": "^0.99.3",
    "core-js": "^3.4.4",
    "date-fns": "^2.8.1",
    "electron-positioner": "^4.1.0",
    "electron-store": "^5.1.0",
    "jsonwebtoken": "^8.5.1",
    "typeface-roboto": "0.0.75",
    "vue": "^2.6.11",
    "vue-router": "^3.1.3",
    "vuetify": "^2.1.15",
    "vuex": "^3.1.2",
    "vuex-persist": "^2.2.0"
  },
  "devDependencies": {
    "@mdi/js": "^4.7.95",
    "@vue/cli-plugin-babel": "^4.1.2",
    "@vue/cli-plugin-eslint": "^4.1.2",
    "@vue/cli-service": "^4.1.2",
    "@vue/eslint-config-prettier": "^6.0.0",
    "babel-eslint": "^10.0.3",
    "deepmerge": "^4.2.2",
    "electron": "^6.1.7",
    "electron-icon-builder": "^1.0.2",
    "electron-notarize": "^0.2.1",
    "eslint": "^6.8.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-vue": "^6.1.1",
    "fibers": "^4.0.2",
    "menubar": "^6.0.8",
    "npm-check": "^5.9.0",
    "prettier": "^1.19.1",
    "sass": "^1.24.0",
    "sass-loader": "^8.0.0",
    "vue-cli-plugin-electron-builder": "^1.4.4",
    "vue-cli-plugin-vuetify": "^2.0.2",
    "vue-template-compiler": "^2.6.11",
    "vuetify-loader": "^1.4.3",
    "webpack-conditional-loader": "^1.0.12"
  },
  "browserslist": {
    "android": [
      "Chrome >= 50"
    ],
    "ios": [
      "ios_saf >= 11"
    ],
    "electron": [
      "Electron >= 6"
    ]
  }
}
