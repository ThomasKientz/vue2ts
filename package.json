{
  "name": "boomerang",
  "version": "1.0.0",
  "private": true,
  "description": "email yourself in one tap",
  "author": "Thomas Kientz <contact@boomerang-app.io>",
  "scripts": {
    "serve": "vue-cli-service serve --open --port 8050",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "build-android": "BROWSERSLIST_ENV=android vue-cli-service build --mode production && npx cap copy",
    "build-electron": "BROWSERSLIST_ENV=electron vue-cli-service electron:build --skipBundle --mode production",
    "build-ios": "BROWSERSLIST_ENV=ios vue-cli-service build --mode production && npx cap copy",
    "build-local": "vue-cli-service build --mode localhost && npx cap copy",
    "dev": "npm run serve",
    "electron:build": "vue-cli-service electron:build",
    "electron:generate-icons": "electron-icon-builder --input=./public/icon.png --output=build --flatten",
    "electron:serve": "vue-cli-service electron:serve",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "upgrade-interactive": "npm-check --update"
  },
  "main": "background.js",
  "dependencies": {
    "@capacitor/android": "^2.4.2",
    "@capacitor/cli": "^2.4.2",
    "@capacitor/core": "^2.4.2",
    "@capacitor/ios": "^2.4.2",
    "@ionic-native/app-preferences": "^5.29.0",
    "@ionic-native/core": "^5.29.0",
    "@sentry/browser": "^5.27.1",
    "@sentry/integrations": "^5.27.1",
    "axios": "^0.19.2",
    "capacitor-plugin-file-infos": "0.0.4",
    "com-darryncampbell-cordova-plugin-intent": "^2.0.0",
    "cordova-plugin-app-preferences": "^0.99.3",
    "core-js": "^3.6.5",
    "date-fns": "^2.16.1",
    "electron-positioner": "^4.1.0",
    "electron-store": "^5.2.0",
    "jsonwebtoken": "^8.5.1",
    "typeface-roboto": "0.0.75",
    "vue": "^2.6.12",
    "vue-router": "^3.4.8",
    "vuetify": "^2.3.15",
    "vuex": "^3.5.1",
    "vuex-persist": "^2.3.0"
  },
  "devDependencies": {
    "@mdi/js": "^4.9.95",
    "@vue/cli-plugin-babel": "^4.5.8",
    "@vue/cli-plugin-eslint": "^4.5.8",
    "@vue/cli-service": "^4.5.8",
    "@vue/eslint-config-prettier": "^6.0.0",
    "babel-eslint": "^10.1.0",
    "deepmerge": "^4.2.2",
    "electron": "^6.1.12",
    "electron-icon-builder": "^1.0.2",
    "electron-notarize": "^0.2.1",
    "eslint": "^6.8.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^6.2.2",
    "menubar": "^6.0.8",
    "npm-check": "^5.9.2",
    "prettier": "^1.19.1",
    "sass": "^1.27.0",
    "sass-loader": "^8.0.2",
    "vue-cli-plugin-electron-builder": "^1.4.6",
    "vue-cli-plugin-vuetify": "^2.0.7",
    "vue-template-compiler": "^2.6.12",
    "vuetify-loader": "^1.6.0",
    "webpack-conditional-loader": "^1.0.12"
  },
  "browserslist": {
    "android": [
      "Chrome >= 37"
    ],
    "ios": [
      "ios_saf >= 11"
    ],
    "electron": [
      "Electron >= 6"
    ]
  },
  "homepage": "https://getboomerang.app"
}
